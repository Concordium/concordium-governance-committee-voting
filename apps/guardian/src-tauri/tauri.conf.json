{
    "build": {
        "beforeDevCommand": "yarn dev",
        "beforeBuildCommand": "yarn build",
        "devPath": "http://localhost:1420",
        "distDir": "../dist"
    },
    "package": {
        "productName": "Concordium Election Guardian",
        "version": "2.0.0"
    },
    "tauri": {
        "allowlist": {
            "all": false,
            "shell": {
                "all": false,
                "open": true
            },
            "fs": {
                "scope": ["$APPDATA/*", "$APPCONFIG/*"],
                "readFile": true,
                "readDir": true,
                "writeFile": true,
                "exists": true
            }
        },
        "cli": {
            "args": [
                {
                    "name": "node",
                    "takesValue": true
                }
            ]
        },
        "bundle": {
            "active": true,
            "targets": "all",
            "identifier": "com.concordium.guardian",
            "icon": [
                "icons/32x32.png",
                "icons/128x128.png",
                "icons/128x128@2x.png",
                "icons/icon.icns",
                "icons/icon.ico"
            ]
        },
        "security": {
            "csp": null
        },
        "windows": [
            {
                "fullscreen": false,
                "resizable": true,
                "title": "Concordium Election Guardian",
                "width": 800,
                "height": 600,
                "fileDropEnabled": false
            }
        ]
    }
}
