{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["./src/assets/*"],
            "@shell/*": ["./src/shell/*"],
            "@pages/*": ["./src/pages/*"],
            "@shared/*": ["./src/shared/*"]
        }
    },
    "include": ["src", "types", "scripts", "package.json"],
    "exclude": ["src/__generated__"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
